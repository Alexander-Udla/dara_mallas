<odoo>
    <record id="dara_mallas_program_create_edco_form" model="ir.ui.view">
                <field name="name">view.dara_mallas.program_create.form</field>
                <field name="model">dara_mallas.program_create</field>
                <field name="priority" eval="25" />
                <field name="arch" type="xml">
                    <form>
                        <header> 
                            <button name="open_study_plan_create" string="Abrir malla " type="object" class="oe_right oe_highlight" attrs="{'invisible':[('state','!=','aprobado')]}"/>
                            <field name="state" widget="statusbar"  />              		
                            <button name="openfile" type="object" string="Crear" class="oe_right oe_highlight" attrs="{'invisible':[('state','=','aprobado')]}"/>
                        </header>
                        <sheet>
                                    <group>
                                            
                                            <field name="name"/>
                                            <field name="name_file" invisible="1"/>
                                            <field name="csv_file"  filename="name_file"/>
                                            <field name="name_file_result" invisible="1"/>
                                            <field name="file_result"  filename="name_file_result"/>
                                            <h2>
                                            <field name="result" nolabel="1" readonly="1" force_save="1" style="color:red ! important;"  />
                                            </h2>
                                    </group>
                    
                        </sheet>
                    </form>     	            	  
                </field>
        </record> 
        <record id="dara_mallas_program_create_edco" model="ir.ui.view">
                <field name="name">view.dara_mallas.program_create.tree</field>
                <field name="model">dara_mallas.program_create</field>
                <field name="priority" eval="25" />
                <field name="arch" type="xml">
                <tree>
                	<field name="name"/>
                    <!-- <field name="name_file" invisible="1"/> -->
                	<field name="state"/>
					<!-- <field name="csv_file" widget="binary" file_name="name_file"/> -->
                    <field name="create_date"/>
              		
                </tree>     	            	  
                </field>
        </record> 
                    <record id="action_open_program_create_edco" model="ir.actions.act_window">
                        <field name="name">Programa EDCO</field>
                            <field name="type">ir.actions.act_window</field>
                            <field name="res_model">dara_mallas.program_create</field>
                            <field name="view_mode">tree,form</field> 
                            <field name="filter" eval="True"/>
                            <field name="help" type="html">
                            <p class="oe_view_nocontent_create">
                                Administre el registro de creacion de programas EDCO 
                            </p><p>
                                
                                DARA / UDLA	
                            </p>
                            </field>
                        </record>

                <menuitem id="men_program_create" parent="dara_programs_tree_menu"  
				  name="Crear nuevo Programa EDCO" 
				  action="action_open_program_create_edco" sequence="26"/> 

</odoo>