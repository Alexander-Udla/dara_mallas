<?xml version="1.0" encoding="UTF-8"?>

<openerp>
	<data>
		  <!-- Anual curricular planning FORM  -->
		
  	    <record id="dara_mallas_grade_mode_line_subject_form" model="ir.ui.view">
                <field name="name">view.dara_mallas.grade_mode_line_subject.form</field>
                <field name="model">dara_mallas.grade_mode_line_subject</field>
                <field name="priority" eval="25" />
                <field name="arch" type="xml">
                <form>
                	<sheet>
            		    <group col="2" >
              		  		
              		  		<field name="subject_id"/>
                        <field name="period_id"/>
              		  		
              		  		
              		  </group>
              	<notebook>
                          <page string="Nivel">
                                <field name="grade_mode_line_ids">
                                  <tree editable="bottom">
                                    <field name ="grade_mode_id"/>
                                    <field name="grade_mode_description"/>
                                    <field name="grade_mode_line_subject_id" invisible="1"/>
                                  </tree>
                                </field>
                            </page>
                      </notebook>
						            		    
            		    
            		    </sheet>
                </form>     	            	  
                </field>
        </record> 
        
        <!-- Study Field    TREE  -->
       <record id="dara_mallas_grade_mode_line_subject_tree" model="ir.ui.view">
                <field name="name">view.dara_mallas.grade_mode_line_subject.tree</field>
                <field name="model">dara_mallas.grade_mode_line_subject</field>
                <field name="priority" eval="25" />
                <field name="arch" type="xml">
                <tree>
					
                       <field name="subject_id"/>
                        <field name="period_id"/>
                        <field name="grade_mode_line_ids" widget="many2many_tags" />
				
                </tree>     	            	  
                </field>
        </record> 
        
   


  		<!-- Study Field  ACTION OPEN -->
        <record id="action_open_grade_mode_line_subject" model="ir.actions.act_window">
           <field name="name">Calificación de Sigla</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dara_mallas.grade_mode_line_subject</field>
            <field name="view_mode">tree,form</field> 
            <field name="filter" eval="True"/>
 			      <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Administre el registro de Calificacion de sigla
              </p><p>
                
                Created by Intsoltecs
                www.intsoltec.com	
              </p>
            </field>
         </record>
	


</data>

		<menuitem id="dara_grade_mode_line_subject" name="Calificación" parent="dara_subjects_tree_menu" action="action_open_grade_mode_line_subject" sequence="20"/>

</openerp>	