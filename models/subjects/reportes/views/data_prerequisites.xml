<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_data_prerequisites_form" model="ir.ui.view">
            <field name="name">data.prerequisites.form</field>
            <field name="model">dara_mallas.data_prerequisite</field>
            <field name="arch" type="xml">
                <form string="Prerequisitos de Datos">
                    <sheet>
                        <group col="4">
                            <field name="status" string="Base de datos "/>
                            <field name="period_id" string="Periodo"/>
                            <field name="file" filename="file_name" readonly="1"/>
                            <field name="file_name" invisible="1"/>
                            

                        </group>
                        
                        <footer>
                            <button name="execute_all" 
                                    type="object" 
                                    string="Generar" 
                                    class="btn-primary" 
                                    style="margin-right: 10px;"/> <!-- Espaciado a la derecha del botÃ³n -->

                            <button name="verificar_estado_tarea" 
                                    type="object" 
                                    string="Ver estado" 
                                    class="btn-primary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_data_prerequisites_form" model="ir.actions.act_window">
            <field name="name">Prerequisitos</field>
            <field name="res_model">dara_mallas.data_prerequisite</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_data_prerequisites_form"/>
        </record>

        <menuitem id="data_prerequisites_menu" 
                  name="Prerequisitos" 
                  parent="dara_homologations_reports" 
                  action="action_data_prerequisites_form" 
                  sequence="2"/>   

    </data>
</odoo>
