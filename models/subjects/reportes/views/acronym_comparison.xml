<odoo>
    <data>
        <record id="view_acronym_comparison_form" model="ir.ui.view">
            <field name="name">acronym.comparison.form</field>
            <field name="model">dara_mallas.acronym_comparison</field>
            <field name="arch" type="xml">
                <form string="Comparativo de siglas">
                    <sheet>
                        <group>
                            <field name="acronym1"/>
                            <field name="acronym2"/>
                            <button name="findAcronym" string="Comparar" type="object" class="oe_highlight"/>
                        </group>
                        <group>
                            <h2>Resultados</h2>
                            <t t-if="record.table_data">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <t t-foreach="JSON.parse(record.table_data).headers" t-as="header">
                                                <th t-esc="header"/>
                                            </t>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="JSON.parse(record.table_data).rows" t-as="row">
                                            <tr>
                                                <td t-esc="row.row_title"/>
                                                <t t-foreach="row.values" t-as="value">
                                                    <td t-esc="value"/>
                                                </t>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <p>No hay datos disponibles.</p>
                            </t>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
 


        <!-- Acción para abrir el formulario -->
        <record id="action_acronym_comparison_form" model="ir.actions.act_window">
            <field name="name">Comparativo de siglas</field>
            <field name="res_model">dara_mallas.acronym_comparison</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_acronym_comparison_form"/>
        </record>

        <!-- Menú para acceder al formulario -->
        <menuitem id="data_acronym_comparison_menu"
                  name="Comparativo de siglas"
                  parent="dara_homologations_reports"
                  action="action_acronym_comparison_form"
                  sequence="3"/>
    </data>
</odoo>
